.delivery {
  width: 100%;
}
.background {
  background-size: 100% 100%;
  height: 100%;
  left: 0rpx;
  position: absolute;
  top: 0rpx;
  width: 100%;
  z-index: -1;
}
.user-info-main {
  align-items: center;
  box-sizing: border-box;
  color: #fff;
  display: -webkit-flex;
  display: flex;
  height: 110px;
  padding: 20px;
  position: relative;
  width: 100%;
}
.user-image {
  border-radius: 50px;
  height: 120rpx;
  width: 120rpx;
}
.user-info {
  display: -webkit-flex;
  display: flex;
  flex-direction: column;
}
.user-info-details {
  padding-left: 50rpx;
}
.van-dropdown-menu {
  background-color: transparent !important;
  height: 40rpx !important;
}
.van-dropdown-menu__item {
  background: rgba(0, 0, 0, 0.3);
  border-radius: 25px;
  height: 40rpx !important;
  margin: 20rpx -40rpx !important;
}
.van-dropdown-menu__title {
  color: #fff !important;
  padding-left: 0rpx !important;
}
.van-dropdown-item {
  top: 190rpx !important;
}
.main {
  overflow-y: scroll;
}
.bottom,
.main {
  display: -webkit-flex;
  display: flex;
}
.bottom {
  min-height: 110rpx;
}
.bottom-left {
  background-color: #f7f8fa;
  width: 130rpx;
}
.bottom-right {
  flex: 1;
}
.nav {
  background-color: #f7f8fa;
}
.sidebar {
  width: 130rpx !important;
}
.van-sidebar-item--selected {
  border-color: #3680fd !important;
  color: #3680fd !important;
}
.delivery-list {
  flex: 1;
  padding-left: 24rpx;
  padding-right: 32rpx;
}
.dish {
  display: -webkit-flex;
  display: flex;
  padding: 40rpx 0;
}
.splitline {
  background-color: #eaeaea;
  box-sizing: border-box;
  height: 1px;
  padding: 0 12rpx;
}
.dish-image {
  background-color: #f2f2f2;
  border-radius: 4px;
  overflow: hidden;
}
.dish-image,
.image {
  height: 200rpx;
  width: 200rpx;
}
.image {
  object-fit: contain;
}
.dish-info {
  display: -webkit-inline-flex;
  display: inline-flex;
  flex-direction: column;
  justify-content: space-evenly;
  margin-left: 16rpx;
}
.name {
  color: #333;
  font-size: 16px;
  font-weight: 700;
  line-height: 20px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  width: 180px;
}
.pickupInfo {
  line-height: 16px;
}
.inventory,
.pickupInfo {
  color: #999;
  font-size: 12px;
}
.limit {
  background: #fff4e8;
  color: #ff9a1c;
  float: right;
  font-size: 10px;
  padding: 4px;
}
.price-stepper {
  display: -webkit-flex;
  display: flex;
  justify-content: space-between;
}
.price {
  color: #fc721f;
  font-weight: 700;
}
.stepper {
  transform: translateY(3px);
}
.stepper-input {
  background-color: #fff !important;
  color: #3a7efd !important;
}
.stepper-plus {
  background-color: #3a7efd !important;
  color: #fff !important;
}
.stepper-minus,
.stepper-plus {
  height: 36rpx !important;
  padding: 3rpx !important;
  width: 36rpx !important;
}
.stepper-minus {
  background-color: #fff !important;
  border: 2rpx solid #3a7efd !important;
  border-radius: 10rpx !important;
  color: #3a7efd !important;
}
.stepper-plus::before {
  height: 2px !important;
  width: 12px !important;
}
.stepper-plus::after {
  height: 12px !important;
  width: 2px !important;
}
.stepper-minus::before {
  height: 2px !important;
  width: 12px !important;
}
.stepper-minus::after {
  height: 12px !important;
  width: 2px !important;
}
.van-stepper__input {
  height: 36rpx !important;
  transform: translateY(-6rpx) !important;
}
