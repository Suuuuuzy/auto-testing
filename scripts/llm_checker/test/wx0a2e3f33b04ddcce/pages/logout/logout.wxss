.container {
  flex-direction: column;
  font-family: PingFangSC, PingFangSC-Regular;
}
.background {
  background-size: 100% 100%;
  height: 436rpx;
  left: 0rpx;
  position: absolute;
  top: 0rpx;
  width: 100%;
  z-index: -1;
}
.user-info {
  box-sizing: border-box;
  color: #fff;
  display: -webkit-flex;
  display: flex;
  height: 580rpx;
  justify-content: center;
  padding: 20px;
  position: relative;
  width: 100%;
}
.user-image {
  border-radius: 100px;
  height: 320rpx;
  position: absolute;
  top: 280rpx;
  width: 320rpx;
}
.main {
  color: #666;
  font-size: 32rpx;
  padding: 44rpx;
  text-align: center;
}
.lxy-nav-bar__inner {
  background-image: linear-gradient(45deg, #3680fd, #7659fc) !important;
}
.van-dialog__button {
  width: 0 !important;
}
