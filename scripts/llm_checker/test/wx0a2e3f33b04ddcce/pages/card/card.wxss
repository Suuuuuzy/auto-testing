.container {
  background-color: #f7f7f7;
}
.background {
  background-size: 100% 100%;
  height: 480rpx;
  left: 0rpx;
  position: absolute;
  top: 115rpx;
  width: 100%;
  z-index: 0;
}
.main {
  display: -webkit-flex;
  display: flex;
  flex-direction: column;
  margin-top: 272rpx;
  padding: 0 20rpx;
  width: 100%;
}
.van-panel {
  margin-bottom: 20rpx;
}
.panel-header {
  flex-direction: row;
  justify-content: space-between;
}
.header-info,
.panel-header {
  display: -webkit-flex;
  display: flex;
}
.header-info {
  flex-direction: column;
  margin: 43rpx 0 0 40rpx;
}
.company-name {
  color: #333;
  font-size: 36rpx;
  font-weight: 600;
  margin-bottom: 14rpx;
}
.company-sub {
  color: #848484;
  font-size: 28rpx;
  font-weight: 400;
}
.status {
  height: 55rpx;
  width: 136rpx;
}
.van-panel__content {
  align-items: center;
  height: 166rpx;
  padding: 10rpx 16px;
}
.money,
.money-info,
.van-panel__content {
  display: -webkit-flex;
  display: flex;
}
.money-info {
  align-items: center;
  color: #999;
  font-size: 24rpx;
}
.money-count {
  color: #fc721f;
  font-size: 52rpx;
  font-weight: 600;
  margin-left: 18rpx;
}
.qrcode {
  height: 60rpx;
  margin-left: 20px;
  width: 60rpx;
}
.footer {
  height: 90rpx;
  justify-content: space-around;
}
.footer,
.footer-button {
  align-items: center;
  display: -webkit-flex;
  display: flex;
}
.seperate {
  border: 1rpx solid rgba(0, 0, 0, 0.1);
  height: 60rpx;
}
.footer-icon {
  height: 32rpx;
  margin-right: 10rpx;
  width: 29rpx;
}
.nodata {
  align-items: center;
  color: #999;
  display: -webkit-flex;
  display: flex;
  font-size: 20px;
  height: 100%;
  justify-content: center;
}
