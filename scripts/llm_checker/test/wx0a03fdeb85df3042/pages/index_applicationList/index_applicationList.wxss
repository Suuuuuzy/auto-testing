.container {
  background-color: #f7f7f7;
  height: 100%;
}
#applicationList-body {
  padding-top: 100rpx;
  height: 100%;
  overflow: hidden;
  box-sizing: border-box;
}
.hotService-cont {
  height: 100%;
  background-color: #fff;
  padding-top: 10rpx;
  overflow: scroll;
  box-sizing: border-box;
  display: flex;
  flex-wrap: wrap;
  align-content: flex-start;
}
.hotService-cont .hotService_item {
  flex-grow: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
  width: 25%;
  font-size: 28rpx;
  color: #000;
  margin-top: 56rpx;
  text-align: center;
  padding: 0 20rpx;
  box-sizing: border-box;
}
.hotService_item image {
  width: 50rpx;
  height: 47rpx;
  margin-bottom: 25rpx;
}
.hotService-cont .noData {
  flex: 1;
}
