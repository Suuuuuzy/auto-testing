.container {
  background-color: #f3f4f6;
}
#address_none {
  padding-top: 202rpx;
}
.address_none_top {
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 36rpx;
  color: #cecfd0;
}
.address_none_top .address_none_icon {
  width: 258rpx;
  height: 259rpx;
  margin-bottom: 56rpx;
}
.address_bottom {
  height: 145rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
}
.address_btns {
  height: 100%;
  display: flex;
  align-items: center;
  margin: 0 20rpx;
}
.address_addBtn {
  height: 92rpx;
  line-height: 92rpx;
  width: 100%;
  border-radius: 0;
  background-color: #ff6262;
  font-size: 34rpx;
  color: #fff;
}
#address_body {
  padding-top: 20rpx;
  padding-bottom: 145rpx;
}
.addressList {
  background-color: #fff;
  margin-bottom: 20rpx;
}
.addressList-top {
  position: relative;
  padding-right: 146rpx;
  font-size: 28rpx;
  color: #292621;
  border-bottom: 1rpx solid #f5f2ed;
  padding: 14rpx 146rpx 34rpx 30rpx;
}
.addressList-top .address-name {
  line-height: 59rpx;
  display: flex;
  align-items: center;
}
.address-name text + text {
  margin-left: 24rpx;
}
.address-name .address-topic {
  color: #fff;
  background-color: #4f90f7;
  padding: 0 10rpx;
  min-width: 35rpx;
  height: 28rpx;
  line-height: 28rpx;
  text-align: center;
  margin-left: 10rpx;
  border-radius: 5rpx;
  font-size: 18rpx;
}
.addressList-top .address-detail {
  line-height: 37rpx;
}
.addressList-top .address-isDefault {
  position: absolute;
  right: 30rpx;
  top: 28rpx;
}
.address-isDefault.default image {
  width: 35rpx;
  height: 26rpx;
  padding-top: 5rpx;
}
.address-isDefault.notDefault {
  width: 100rpx;
  height: 46rpx;
  border-radius: 23rpx;
  border: 1rpx solid #8a857c;
  color: #8a857c;
  text-align: center;
  line-height: 46rpx;
  box-sizing: border-box;
}
.address-isDefault.notDefault .addressDefaultBtn {
  width: 100%;
  height: 100%;
}
.addressList-bottom {
  height: 80rpx;
  display: flex;
  align-items: center;
  font-size: 24rpx;
  padding: 0 30rpx;
}
.addressList-bottom .isDefault {
  font-size: 24rpx;
  color: #ff6262;
}
.addressList-bottom .isDefault image {
  width: 30rpx;
  height: 30rpx;
  vertical-align: middle;
  margin-right: 10rpx;
}
.addressList-bottom .address-operation {
  flex: 1;
  color: #8a857c;
  display: flex;
  justify-content: flex-end;
  align-items: center;
}
.address-operation image {
  max-width: 28rpx;
  max-height: 31rpx;
  margin-right: 10rpx;
  vertical-align: middle;
}
.address-operation .address-edit {
  margin-right: 30rpx;
}
.addressList-bottom .isDefault,
.addressList-bottom .address-edit,
.addressList-bottom .address-del {
  display: flex;
  align-items: center;
}
