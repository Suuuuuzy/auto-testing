<view class="cu-custom" style="height:{{CustomBar}}px">
  <view
    class="cu-bar fixed {{bgImage!=''?'none-bg text-white bg-img':''}} {{bgColor}}"
    style="height:{{CustomBar}}px;padding-top:{{StatusBar}}px;{{bgImage?'background-image:url('+bgImage+')':''}}"
  >
    <view bindtap="BackPage" class="action" wx:if="{{isBack}}">
      <text class="cuIcon-back"></text>
      <slot name="backText"></slot>
    </view>
    <view bindtap="toHome" class="action" wx:if="{{isHome}}">
      <text class="cuIcon-back"></text>
      <slot name="backText"></slot>
    </view>
    <view
      class="action border-custom"
      style="width:{{Custom.width}}px;height:{{Custom.height}}px;margin-left:calc(750rpx - {{Custom.right}}px)"
      wx:if="{{isCustom}}"
    >
      <text bindtap="BackPage" class="cuIcon-back"></text>
      <text bindtap="toHome" class="cuIcon-homefill"></text>
    </view>
    <view bindtap="lanSwitch" class="action" wx:if="{{isLan}}">
      <image
        mode="aspectFit"
        src="../../resource/images/common/lan_{{lanText=='中文'?'uy':'ch'}}.png"
        style="width: 100rpx; height: 50rpx"
      ></image>
    </view>
    <view class="content" style="top:{{StatusBar}}px">
      <slot name="content"></slot>
    </view>
    <slot name="right"></slot>
  </view>
</view>
