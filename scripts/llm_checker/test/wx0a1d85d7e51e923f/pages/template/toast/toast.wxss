.toast_content_box {
  align-items: center;
  display: -webkit-flex;
  display: flex;
  height: 100%;
  justify-content: center;
  position: fixed;
  width: 100%;
  z-index: 9999;
}
.toast_content {
  background: rgba(0, 0, 0, 0.8);
  border-radius: 20rpx;
  padding: 10rpx 30rpx;
  width: 50%;
}
.toast_content_text {
  color: #fff;
  font-size: 28rpx;
  height: 100%;
  text-align: center;
  width: 100%;
}
.toast_icon {
  color: #fff;
  font-size: 70rpx;
}
.rtl {
  direction: rtl;
}
