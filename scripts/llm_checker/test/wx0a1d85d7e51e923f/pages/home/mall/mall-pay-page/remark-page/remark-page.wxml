<import src="/pages/template/toast/toast.wxml"></import>
<import src="/pages/template/footer/footer.wxml"></import>
<view>
  <view class="bg-white radius shadow padding-sm" style="border-radius: 12rpx">
    <view class="flex">
      <view class="flex-sub">
        <view class="cu-form-group padding-sm input-area">
          <textarea
            bindinput="remarkInput"
            class="uy-tom  text-sm {{isUy?'rtl':''}}"
            focus="{{inputShowed}}"
            maxlength="1000"
            placeholder="{{Str.inputFoodRemark[lanIndex]}}"
            placeholderClass="placeholder-class"
            value="{{remark}}"
          ></textarea>
        </view>
      </view>
    </view>
    <view
      class="cu-list grid col-4 no-border solids-top {{isUy?'rtl':''}}"
      wx:if="{{pageData.type&&pageData.type.length>0}}"
    >
      <view
        bindtap="goodTypeClick"
        class="cu-item text-center"
        data-item="{{item}}"
        data-name="{{isUy?item.uy_name:item.ch_name}}"
        style="padding-bottom: 0"
        wx:for="{{pageData.type}}"
        wx:key="index"
      >
        <view
          class="cu-tag text-sm line-gray radius uy round"
          style="left: 0; margin-left: 5rpx; margin-right: 5rpx"
          >{{isUy?item.uy_name:item.ch_name}}</view
        >
      </view>
    </view>
    <view class="lately-main {{isUy?'rtl':''}}">
      <view
        bindtap="remarkClick"
        class="chunk"
        data-remark="{{item.remark}}"
        wx:for="{{pageData.remark}}"
        wx:key="index"
      >
        <text class="text-df uy-tom">{{item.remark}}</text>
      </view>
    </view>
    <view class="padding margin text-center">
      <button
        bind:tap="saveBtn"
        class="cu-btn bg-pink padding-lr-xl uy-tom block lg"
      >
        {{Str.save[lanIndex]}}
      </button>
    </view>
  </view>
</view>
<loading hidden="{{!isLoading}}">{{Str.loadingTxt[lanIndex]}}</loading>
