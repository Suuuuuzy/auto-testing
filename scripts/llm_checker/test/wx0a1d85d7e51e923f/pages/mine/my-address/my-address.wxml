<import src="/pages/template/toast/toast.wxml"></import>
<import src="/pages/template/footer/footer.wxml"></import>
<template is="toast" data="{{..._toast_}}"></template>
<view
  class="bg-red margin-xs padding-xs {{isUy?'rtl':''}} text-center"
  style="border-radius: 12rpx"
  wx:if="{{result&&result.areaFee&&result.areaFee.limit_distance>0}}"
>
  <text wx:if="{{isUy}}">
    <text class="text-lg padding-lr-xs">{{result.areaFee.limit_distance}}</text>
    <text>كىلۇمېتىر دائىرىدە يەتكۈزىدۇ</text>
  </text>
  <text wx:else>{{result.areaFee.limit_distance}}公里范围内配送</text>
</view>
<view
  class="cu-list menu margin-top-sm sm-border"
  style="margin-bottom: 120rpx; padding-bottom: 100rpx"
  wx:if="{{result.address.length>0}}"
>
  <view
    class="cu-item {{isUy?'rtl':''}}"
    wx:for="{{result.address}}"
    wx:key="index"
  >
    <view
      bindtap="itemClick"
      class="content padding-tb-sm"
      data-item="{{item}}"
    >
      <view
        class="text-center text-lg padding-xs margin-left uy-tom"
        wx:if="{{item.canDelivery==0}}"
      >
        <text class="icon-location"></text>{{Str.isNotDelivery[lanIndex]}}</view
      >
      <view class="text-lg text-{{item.canDelivery==1?'black':'gray'}}">
        <text wx:if="{{item.search_address}}"
          >{{isUy?item.search_address.uy_name?item.search_address.uy_name:item.search_address.name:item.search_address.name}}/</text
        >
        {{item.house_number}}</view
      >
      <view class="text-gray text-df"
        >{{item.contact_name}} {{item.contact_phone}}</view
      >
    </view>
    <view class="action">
      <view wx:if="{{item.distance&&item.distance!=-1}}"
        >{{item.distance}}km</view
      >
      <navigator
        url="add-address/add-address?id={{item.id}}&isVolunteer={{type==6?1:0}}"
      >
        <text class="cuIcon-edit text-gray" style="font-size: 40rpx"></text>
      </navigator>
    </view>
  </view>
</view>
<view wx:else>
  <view class="weui-loadmore weui-loadmore_line">
    <view
      class="weui-loadmore__tips weui-loadmore__tips_in-line"
      style="background-color: #f1f1f1"
      >{{Str.noContent[lanIndex]}}</view
    >
  </view>
</view>
<view class="weui-footer weui-footer_fixed-bottom" style="bottom: 0">
  <view class="margin-top text-center padding">
    <view class="text-center">
      <button bindtap="addBtn" class="cu-btn block bg-pink lg">
        <text class="icon-roundadd padding-xs"></text>
        {{Str.addAddress[lanIndex]}}
      </button>
    </view>
  </view>
</view>
<loading hidden="{{!isLoading}}">{{Str.loadingTxt[lanIndex]}}</loading>
