<import src="/pages/template/toast/toast.wxml"></import>
<import src="/pages/template/footer/footer.wxml"></import>
<template is="toast" data="{{..._toast_}}"></template>
<view class="box solid-top">
    <view class="cu-bar search bg-white">
        <view class="search-form round">
            <text class="icon-search"></text>
            <input bindinput="searchInput" confirmType="search" placeholder="{{Str.inputAddress[lanIndex]}}" type="text" value="{{searchKeyWord}}"></input>
        </view>
        <view class="action">
            <button bindtap="searchBtn" class="cu-btn line-pink shadow-blur round" disabled="{{!searchKeyWord}}">{{Str.search[lanIndex]}}</button>
        </view>
    </view>
</view>
<view class="margin-top-sm">
    <view bindtap="itemClick" class="padding-sm bg-white solids-bottom" data-item="{{item}}" wx:for="{{addressList}}" wx:key="index">
        <view wx:if="{{isUy}}">{{item.uy_name}}</view>
        <view class="flex justify-between">
            <view>{{item.name}}</view>
            <view class="text-cyan" wx:if="{{item.distance}}">{{item.distance}}m</view>
        </view>
        <view class="text-grey text-sm">{{item.address}}</view>
        <view>
            <view class="cu-tag radius uy line-pink sm">{{isUy?item._area.uy_name:item._area.ch_name}}</view>
        </view>
    </view>
</view>
<view>
    <view class="weui-loadmore weui-loadmore_line">
        <view class="weui-loadmore__tips weui-loadmore__tips_in-line" style="background-color:#f1f1f1">{{Str.noContent[lanIndex]}}</view>
    </view>
</view>
<loading hidden="{{!isLoading}}">{{Str.loadingTxt[lanIndex]}}</loading>
