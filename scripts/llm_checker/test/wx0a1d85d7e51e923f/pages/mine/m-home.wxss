@import "/app.wxss";
.m-ico {
  font-size: 40rpx;
  text-align: left;
}
.img-btn {
  background-color: #fff;
  border: 0;
  margin: 0rpx;
  padding: 0rpx;
}
.cart-bg {
  border-radius: 0rpx;
  margin-top: -20rpx;
  min-height: 130rpx;
}
.popup-content {
  background: #f5f5f5;
  border-radius: 16rpx 16rpx 0 0;
  margin-bottom: env(safe-area-inset-bottom);
}
.popup-content .popup-title {
  background: #fff;
  border-radius: 16rpx 16rpx 0 0;
  color: #999;
  font-size: 24rpx;
  height: 112rpx;
  line-height: 112rpx;
  text-align: center;
}
.border-bottom-1px {
  position: relative;
}
.border-bottom-1px::after {
  border-bottom: 2rpx solid #e5e5e5;
  box-sizing: border-box;
  content: "";
  display: block;
  height: 200%;
  left: 0;
  position: absolute;
  top: 0;
  transform: scale(0.5);
  transform-origin: left top;
  width: 200%;
}
.popup-content .popup-close,
.popup-content .popup-phone {
  align-items: center;
  background: #fff;
  color: #333;
  display: -webkit-flex;
  display: flex;
  font-family: PingFangSC-Regular, PingFang SC;
  font-size: 30rpx;
  font-weight: 400;
  height: 100rpx;
  justify-content: center;
  text-align: center;
}
.popup-content .popup-phone.online {
  margin-bottom: 20rpx;
}
.popup-content .popup-phone.online::after {
  content: none;
}
.popup-content .popup-close {
  border: 0;
  color: #333;
  margin-top: 16rpx;
}
