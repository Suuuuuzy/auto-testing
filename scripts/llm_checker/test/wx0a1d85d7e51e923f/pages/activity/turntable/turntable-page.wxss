@import "/pages/home/mall/mall-home.wxss";
page {
  height: 100%;
  left: 0;
  position: fixed;
  top: 0;
}
.canvas-container,
.gb-wheel-content {
  margin: 0 auto;
  position: relative;
}
.gb-wheel-content {
  background-size: 12px 14px;
  box-shadow: inset 0 0 2px 2px rgba(0, 0, 0, 0.2);
  height: 660rpx;
  overflow: hidden;
  width: 660rpx;
  z-index: 2;
}
.gb-wheel-content,
.gb-wheel-run {
  border-radius: 50%;
  box-sizing: border-box;
}
.gb-wheel-run {
  border: 30rpx solid #f1ecec;
  box-shadow: 0 0 5rpx 0rpx rgba(0, 0, 0, 0.98);
  height: 700rpx;
  left: 27rpx;
  opacity: 0.7;
  position: absolute;
  top: -19rpx;
  width: 700rpx;
}
.gb-wheel-line {
  height: 100%;
  margin: 0 auto;
  position: relative;
  width: 100%;
  z-index: 9;
}
.gb-wheel-litem {
  background-color: #fff;
  height: 340rpx;
  left: 340rpx;
  overflow: hidden;
  position: absolute;
  top: 0;
  transform-origin: 50% 340rpx;
  width: 1.2px;
}
.gb-wheel-list {
  z-index: 9;
}
.gb-wheel-item,
.gb-wheel-list {
  height: 100%;
  left: 0;
  position: absolute;
  top: 0;
  width: 100%;
}
.gb-wheel-item {
  color: #fff;
  text-shadow: 0 1px 1px hsla(0, 0%, 100%, 0.6);
}
.gb-wheel-icontent {
  display: block;
  margin: 0 auto;
  padding-top: 50rpx;
  position: relative;
  text-align: center;
  transform-origin: 50% 328rpx;
}
.canvas-list {
  height: inherit;
  left: 0;
  position: absolute;
  top: 0;
  width: inherit;
  z-index: 8;
}
.canvas-item2 {
  color: #e4370e;
  font-weight: 700;
  overflow: hidden;
  width: 660rpx;
}
.canvas-item2,
.canvas-item2-after {
  height: 330rpx;
  left: 0;
  position: absolute;
  top: 0;
  transform-origin: 330rpx 330rpx;
}
.canvas-item2-after {
  opacity: 1;
  width: 330rpx;
}
.back {
  background: hsla(0, 0%, 100%, 0.5);
  height: 90%;
  left: 0;
  position: absolute;
  top: -40rpx;
  width: 100%;
  z-index: 8888;
}
.juedinoption {
  color: #1078e7;
  font-size: 30rpx;
  margin-top: 30rpx;
  text-align: center;
  text-decoration: underline;
  width: 100%;
}
.share {
  align-items: center;
  display: -webkit-flex;
  display: flex;
  height: 180rpx;
  justify-content: space-around;
  width: 100%;
}
.index__share {
  background: none;
  border: 1px solid #1078e7;
  border-radius: 8rpx;
  color: #1078e7;
  font-size: 28rpx;
  padding: 10rpx 0;
  width: 36%;
}
.middle-flex-column-center {
  flex-direction: column;
}
.middle-flex-column-center,
.middle-flex-row-center {
  align-items: center;
  display: -webkit-flex;
  display: flex;
  justify-content: center;
}
.middle-flex-row-center {
  flex-direction: row;
}
