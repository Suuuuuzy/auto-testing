<view
  class="{{_.cls( classPrefix,[theme] )}} class {{prefix}}-class"
  style="{{_._style( [style,customStyle] )}}"
>
  <view
    class="{{classPrefix}}__content"
    style="{{contentStyle}}"
    wx:if="{{column>0}}"
  >
    <slot></slot>
  </view>
  <scroll-view
    scrollWithAnimation
    scrollX
    class="{{classPrefix}}__content"
    style="{{'white-space: nowrap;'+contentStyle}}"
    wx:else
  >
    <slot></slot>
  </scroll-view>
</view>
