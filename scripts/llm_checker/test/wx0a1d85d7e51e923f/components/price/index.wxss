.inline {
  display: inline;
  white-space: nowrap;
}
.price {
  color: inherit;
  display: inline;
  font-size: inherit;
  text-decoration: inherit;
}
.lighter {
  font-size: 32rpx;
}
.lighter,
.mini {
  font-weight: 400;
}
.mini {
  color: #5d5d5d;
  font-size: 24rpx;
}
.del .pprice {
  color: #9b9b9b;
  font-size: 32rpx;
  font-weight: 400;
  text-decoration: line-through;
}
.delthrough {
  position: relative;
}
.delthrough .line {
  background-color: currentColor;
  left: 0;
  margin: 0;
  position: absolute;
  right: 0;
  top: 50%;
  transform: translateY(-50%);
}
.symbol {
  color: inherit;
  display: inline;
  font-size: inherit;
  font-size: 0.8em;
}
.pprice {
  display: inline;
  margin: 0 0 0 4rpx;
}
.decimal,
.integer {
  color: inherit;
  font-size: inherit;
}
.decimal.smaller {
  font-size: 0.8em;
  vertical-align: initial;
}
