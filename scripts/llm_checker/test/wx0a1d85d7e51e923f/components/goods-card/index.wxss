.goods-card {
  border-bottom: none;
  border-radius: 0 0 16rpx 16rpx;
  box-sizing: border-box;
  font-size: 24rpx;
}
.goods-card__main {
  align-items: center;
  background: transparent;
  border-radius: 0 0 16rpx 16rpx;
  display: -webkit-flex;
  display: flex;
  flex-direction: column;
  justify-content: center;
  line-height: 1;
  margin-bottom: 16rpx;
  padding: 0;
  position: relative;
  width: 342rpx;
}
.goods-card__thumb {
  flex-shrink: 0;
  height: 340rpx;
  position: relative;
  width: 340rpx;
}
.goods-card__thumb:empty {
  display: none;
  margin: 0;
}
.goods-card__img {
  border-radius: 16rpx 16rpx 0 0;
  display: block;
  height: 100%;
  overflow: hidden;
  width: 100%;
}
.goods-card__body {
  background: #fff;
  border-radius: 0 0 16rpx 16rpx;
  flex: 1 1 auto;
  padding: 16rpx 24rpx 18rpx;
}
.goods-card__body,
.goods-card__upper {
  display: -webkit-flex;
  display: flex;
  flex-direction: column;
}
.goods-card__upper {
  flex: 1 1 auto;
  overflow: hidden;
}
.goods-card__title {
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  color: #030303;
  display: -webkit-box;
  flex-shrink: 0;
  font-size: 28rpx;
  font-weight: 400;
  height: 50rpx;
  line-height: 36rpx;
  overflow: hidden;
  width: 280rpx;
  word-break: break-word;
}
.goods-card__tags {
  display: -webkit-flex;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  margin: 0rpx 0 8rpx 0rpx;
}
.goods-card__tag {
  background: transparent;
  border: 1rpx solid #fa4126;
  border-radius: 8rpx;
  color: #fa4126;
  display: block;
  font-size: 20rpx;
  line-height: 30rpx;
  margin: 0 8rpx 8rpx 0;
  overflow: hidden;
  padding: 0 8rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  word-break: keep-all;
}
.goods-card__down {
  align-items: baseline;
  display: -webkit-flex;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  line-height: 32rpx;
  margin: 8rpx 0 0;
  position: relative;
}
.goods-card__origin-price {
  color: #bbb;
  font-size: 24rpx;
  font-weight: 700;
  margin: 0 0 0 8rpx;
  order: 2;
  white-space: nowrap;
}
.goods-card__add-cart {
  bottom: 0;
  margin: auto 0 0 auto;
  order: 3;
  position: absolute;
  right: 0;
}
.spec-for-price {
  color: #fa4126;
  font-size: 36rpx;
  font-weight: 700;
  margin: 0;
  order: 1;
  white-space: nowrap;
}
.spec-for-symbol {
  font-size: 24rpx;
}
