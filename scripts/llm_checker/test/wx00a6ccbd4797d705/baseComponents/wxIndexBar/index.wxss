.wx-index-bar {
  height: 100%;
  position: relative;
}
.wx-index-bar__sidebar {
  display: -webkit-flex;
  display: flex;
  flex-direction: column;
  position: fixed;
  right: 0;
  text-align: center;
  top: 50%;
  transform: translateY(-50%);
  user-select: none;
}
.wx-index-bar__index {
  font-size: 10px;
  font-size: var(--index-bar-index-font-size, 10px);
  font-weight: 500;
  line-height: 14px;
  line-height: var(--index-bar-index-line-height, 14px);
  padding: 0 4px 0 16px;
  padding: 0 var(--padding-base, 4px) 0 var(--padding-md, 16px);
}
