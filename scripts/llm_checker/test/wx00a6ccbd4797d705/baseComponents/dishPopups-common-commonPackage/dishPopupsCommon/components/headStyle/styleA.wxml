<view class="pr p30r bcf container wordBreakBreakAll _div data-v-3accbe07">
  <view
    class="sales f20 fcf _div data-v-3accbe07"
    style="{{'background:'+themeColor+';'}}"
    wx:if="{{sales}}"
    >{{''+customSalesText+': '+sales+''}}</view
  >
  <view
    class="share fcf flexCenter _div data-v-3accbe07"
    style="{{'background:'+themeColor+';'}}"
    wx:if="{{showShare}}"
  >
    <button class="shareBtn data-v-3accbe07" openType="share"></button>
    <view class="iconfont icon-fenxiang fcf _div data-v-3accbe07"></view>
  </view>
  <image
    class="image flexShrink0 data-v-3accbe07"
    mode="aspectFill"
    src="{{imgUrl}}"
    style="{{'height:'+imageHeight+';'}}"
    wx:if="{{imgUrl}}"
  ></image>
  <view class="profile _div data-v-3accbe07">
    <view
      class="f32 fc3 fw mb10r ellipsis1 alipay-lineHeight _div data-v-3accbe07"
      >{{''+itemName+''}}</view
    >
    <view
      class="flex mb10r _div data-v-3accbe07"
      wx:if="{{promotionLimit||hyOrderLimit}}"
    >
      <view class="discount _div data-v-3accbe07" wx:if="{{hyOrderLimit}}"
        >{{'会员价限'+hyOrderLimit+'份'}}</view
      >
      <view class="discount _div data-v-3accbe07" wx:if="{{promotionLimit}}"
        >{{(promName||'促销价')+'限'+promotionLimit+'份'}}</view
      >
    </view>
    <view class="f22 fc6 ellipsis2 _div data-v-3accbe07">{{''+desp+''}}</view>
  </view>
</view>
