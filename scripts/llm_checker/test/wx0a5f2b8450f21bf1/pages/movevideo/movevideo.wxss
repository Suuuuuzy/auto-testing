.userinfo {
  align-items: center;
  display: -webkit-flex;
  display: flex;
  flex-direction: column;
}
.userinfo-avatar {
  border-radius: 50%;
  height: 128rpx;
  margin: 20rpx;
  width: 128rpx;
}
.cancel {
  background: #fff;
  background: #adff2f;
  height: 30rpx;
  left: -15rpx;
  top: -15rpx;
  width: 30rpx;
  z-index: 1000;
}
.cancel,
.kuoda {
  border-radius: 100%;
  position: absolute;
}
.kuoda {
  background: #adff2f;
  bottom: -15rpx;
  height: 40rpx;
  padding: 0;
  right: -15rpx;
  width: 40rpx;
  z-index: 100;
}
.userinfo-nickname {
  color: #a7d1f3;
}
.usermotto {
  margin-top: 200px;
}
button {
  align-items: center;
  background: none;
  display: -webkit-flex;
  display: flex;
  flex-direction: column;
  font-size: 28rpx;
  line-height: 36rpx;
}
button image {
  height: 65rpx;
  margin: 10rpx;
  width: 65rpx;
}
button:after {
  border: none;
}
.bottom {
  align-items: center;
  border-top: 1rpx solid #ddd;
  bottom: 0;
  display: -webkit-flex;
  display: flex;
  flex-direction: row;
  height: 11%;
  position: absolute;
  width: 100%;
}
