.container {
  background-color: #fff;
  display: -webkit-flex;
  display: flex;
  height: 100vh;
  width: 100%;
}
.container .left {
  background-color: #f5f5f5;
  height: 100vh;
  width: 170rpx;
}
.container .right {
  flex: 1;
  height: 100vh;
  overflow: auto;
}
.left_item {
  background-color: #fff;
  color: #66bb6a;
}
.left_item,
.left_item_default {
  font-weight: 700;
  height: 100rpx;
  justify-content: center;
}
.left_item,
.left_item_default,
.right_item {
  align-items: center;
  display: -webkit-flex;
  display: flex;
}
.right_item {
  justify-content: space-between;
  padding: 20rpx 40rpx;
}
.right_item .itemName {
  color: #333;
  font-size: 32rpx;
}
.right_item .itemSuit {
  color: #999;
  font-size: 26rpx;
}
.listen-demo {
  border: 1px solid #66bb6a;
  border-radius: 999rem;
  color: #66bb6a;
}
.listen-demo,
.stop-listen-demo {
  font-size: 24rpx;
  padding: 6rpx 15rpx;
}
.stop-listen-demo {
  border: 1px solid red;
  border-radius: 999rem;
  color: red;
}
