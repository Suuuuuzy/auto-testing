<view
  class="{{['chapterWrap','data-v-30f83c94',isEye?'bgNightColor':'bgDayColor']}}"
>
  <button
    appParameter="{{appId}}"
    binderror="__e"
    class="openApp data-v-30f83c94"
    data-event-opts="{{[ [ 'error',[ [ 'launchAppError',['$event'] ] ] ] ]}}"
    openType="launchApp"
    wx:if="{{scene}}"
  >
    <view class="left-arrow data-v-30f83c94"></view>
    <image
      class="data-v-30f83c94"
      mode="widthFix"
      src="/static/img/baidu.png"
    ></image>
    <label class="_span data-v-30f83c94">百度APP</label>
  </button>
  <view
    bindtap="__e"
    class="mainCon data-v-30f83c94"
    data-event-opts="{{[ [ 'tap',[ ['toSetBottom'] ] ] ]}}"
    style="{{'font-size:'+fontSize+'rpx'+';'+'line-height:'+fontSize+fontSize+'rpx'+';'}}"
  >
    <rich-text nodes="{{bookContent}}"></rich-text>
  </view>
  <view
    class="{{['topupSmoothCon','data-v-30f83c94',uniPlatform=='mp-weixin'?'topupSmoothConWX':'']}}"
    hidden="{{!(readStatus!=1)}}"
  >
    <view class="topup_bg data-v-30f83c94"></view>
    <view
      class="topupCon data-v-30f83c94"
      hidden="{{!(readStatus==2||readStatus==3)}}"
    >
      <view class="title-con flexible aItem-center jc-center data-v-30f83c94">
        <view class="line data-v-30f83c94"></view>
        <view class="title data-v-30f83c94"
          >{{!iosPay?'后续内容为非试读内容':'剩余内容需付费解锁'}}</view
        >
        <view class="line line-right data-v-30f83c94"></view>
      </view>
      <view class="data-v-30f83c94" hidden="{{!(bookData.type!=1)}}">
        <view
          class="{{['f30','data-v-30f83c94',isEye?'text-fff':'text-333']}}"
          style="margin-top: 50rpx"
          >书币余额</view
        >
        <view class="wode-coin flexible aItem-center mb10 data-v-30f83c94">
          <image
            class="ic_b data-v-30f83c94"
            src="/static/img/ic_b@2x.png"
          ></image>
          <view class="coin-count ml30 data-v-30f83c94">{{coin}}</view>
          <view
            class="{{['f28','ml0','data-v-30f83c94',isEye?'text-fff':'text-999']}}"
            >书币</view
          >
          <view class="coin-count ml30 data-v-30f83c94">{{bonus}}</view>
          <view
            class="{{['f28','ml0','data-v-30f83c94',isEye?'text-fff':'text-999']}}"
            >赠币</view
          >
        </view>
        <view
          class="currencyCon flexible jc-between aItem-center data-v-30f83c94"
        >
          <image
            class="tip data-v-30f83c94"
            src="/static/img/currency_tips.png"
          ></image>
          <view class="currency-detail data-v-30f83c94">
            <text class="name f24 data-v-30f83c94">本章价格</text>
            <text class="price data-v-30f83c94">{{chapterPrice}}</text>
            <text class="coin f26 data-v-30f83c94">书币</text>
          </view>
          <view
            catchtap="__e"
            class="currency-btn mr20 data-v-30f83c94"
            data-event-opts="{{[ [ 'tap',[ ['lockChapter'] ] ] ]}}"
            wx:if="{{readStatus==2}}"
            >立即解锁</view
          >
          <view class="currency-tip data-v-30f83c94" wx:if="{{readStatus==3}}"
            >书币不足</view
          >
        </view>
      </view>
      <top-up-template
        allOption="{{allOption}}"
        bind:__l="__l"
        bind:getBookCdnInfo="__e"
        bind:topUpChange="__e"
        bookId="{{bookId}}"
        class="data-v-30f83c94 vue-ref"
        data-custom-hidden="{{!(iosPay&&readStatus==3)}}"
        data-event-opts="{{[ [ '^topUpChange',[ ['topUpChange'] ] ],[ '^getBookCdnInfo',[ ['getBookCdnInfo'] ] ] ]}}"
        data-ref="topUpTemplate"
        payFlag="{{2}}"
        scrollTop="{{scrollTop}}"
        vueId="ed3b17ec-1"
      ></top-up-template>
      <view
        class="f24 f-tac mt30 text-999 data-v-30f83c94"
        hidden="{{!!iosPay}}"
        style="margin-top: 120rpx"
        >由于相关规范，iOS功能暂不可用</view
      >
    </view>
  </view>
  <view
    bindtap="__e"
    class="audio-con data-v-30f83c94"
    data-event-opts="{{[ [ 'tap',[ [ 'goNext',['/pages/readPage/audio?bookId='+bookId] ] ] ] ]}}"
    wx:if="{{bookData.hasAudio&&isShowReadBtn}}"
  >
    <image class="ic_zi data-v-30f83c94" src="/static/img/ic_zi@2x.png"></image>
  </view>
  <view class="footer-wrap data-v-30f83c94" wx:if="{{chapterContent}}">
    <view
      class="set-warp background-wrap flexible mt40 aItem-center data-v-30f83c94"
      wx:if="{{isShowSet}}"
    >
      <view class="{{['f22','data-v-30f83c94',isEye?'text-fff':'text-333']}}"
        >背景</view
      >
      <view class="flexible data-v-30f83c94">
        <view
          catchtap="__e"
          class="set-btn set-btn-day data-v-30f83c94"
          data-event-opts="{{[ [ 'tap',[ [ 'changeEye',[false] ] ] ] ]}}"
          >日间模式</view
        >
        <view
          catchtap="__e"
          class="set-btn set-btn-night data-v-30f83c94"
          data-event-opts="{{[ [ 'tap',[ [ 'changeEye',[true] ] ] ] ]}}"
          >夜间模式</view
        >
      </view>
    </view>
    <view
      class="set-warp flexible slider-wrap mt40 mb30 aItem-center data-v-30f83c94"
      wx:if="{{isShowSet}}"
    >
      <view class="{{['f22','data-v-30f83c94',isEye?'text-fff':'text-333']}}"
        >字号</view
      >
      <view class="flexible aItem-center data-v-30f83c94">
        <view
          catchtap="__e"
          class="set-btn mr20 data-v-30f83c94"
          data-event-opts="{{[ [ 'tap',[ [ 'sliderChange',['plus'] ] ] ] ]}}"
          >A-</view
        >
        <view
          class="{{['f24','ml20','data-v-30f83c94',isEye?'text-fff':'text-666']}}"
          >{{fontSize}}</view
        >
        <view
          catchtap="__e"
          class="set-btn data-v-30f83c94"
          data-event-opts="{{[ [ 'tap',[ [ 'sliderChange',['add'] ] ] ] ]}}"
          >A+</view
        >
      </view>
    </view>
    <view class="bottomWrap flexible aItem-center bgColor data-v-30f83c94">
      <view
        catchtap="__e"
        class="flex data-v-30f83c94"
        data-event-opts="{{[ [ 'tap',[ [ 'gohome',['$event'] ] ] ] ]}}"
      >
        <image
          class="data-v-30f83c94"
          src="/static/img/sc_sun.png"
          wx:if="{{!isEye}}"
        ></image>
        <image
          class="data-v-30f83c94"
          src="/static/img/sc_night.png"
          wx:if="{{isEye}}"
        ></image>
        <view class="f22 f-fwb-400 text-eye data-v-30f83c94">书城</view>
      </view>
      <view
        catchtap="__e"
        class="flex data-v-30f83c94"
        data-event-opts="{{[ [ 'tap',[ [ 'goNext',['/pages/readPage/detail?bookId='+bookId] ] ] ] ]}}"
      >
        <image
          class="ic_eye data-v-30f83c94"
          src="/static/img/detail_night.png"
          wx:if="{{!isEye}}"
        ></image>
        <image
          class="ic_eye data-v-30f83c94"
          src="/static/img/detail_sun.png"
          wx:if="{{isEye}}"
        ></image>
        <view class="f22 f-fwb-400 text-eye data-v-30f83c94">详情</view>
      </view>
      <view
        catchtap="__e"
        class="flex data-v-30f83c94"
        data-event-opts="{{[ [ 'tap',[ [ 'e0',['$event'] ] ] ] ]}}"
      >
        <image
          class="ic_eye data-v-30f83c94"
          src="/static/img/set_sun.png"
          wx:if="{{!isEye}}"
        ></image>
        <image
          class="ic_eye data-v-30f83c94"
          src="/static/img/set_night.png"
          wx:if="{{isEye}}"
        ></image>
        <view class="f22 f-fwb-400 text-eye data-v-30f83c94">设置</view>
      </view>
      <view
        catchtap="__e"
        class="flex data-v-30f83c94"
        data-event-opts="{{[ [ 'tap',[ [ 'addShelfFun',['$event'] ] ] ] ]}}"
      >
        <image
          class="ic_shujia data-v-30f83c94"
          src="/static/img/ic_sj_sun.png"
          wx:if="{{!isEye}}"
        ></image>
        <image
          class="ic_shujia data-v-30f83c94"
          src="/static/img/ic_sj_day.png"
          wx:if="{{isEye}}"
        ></image>
        <view class="f22 f-fwb-400 text-eye data-v-30f83c94"
          >{{!bookData.isShelf?'加入书架':'已在书架'}}</view
        >
      </view>
    </view>
  </view>
</view>
