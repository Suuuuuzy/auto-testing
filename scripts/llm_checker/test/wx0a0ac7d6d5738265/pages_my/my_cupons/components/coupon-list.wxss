::-webkit-scrollbar {
  display: none;
}
.order-scroll {
  height: 100%;
}
.list {
  margin-bottom: 20rpx;
}
.cleft,
.list {
  height: 172rpx;
}
.cleft {
  align-items: center;
  background: linear-gradient(231.44deg, #bce8e7, #63dae0);
  border-radius: 12rpx 0 0 12rpx;
  display: -webkit-flex;
  display: flex;
  flex-direction: column;
  justify-content: center;
  width: 172rpx;
}
.cleft .moneyc {
  color: #fffeed;
  font-size: 52rpx;
  font-weight: 700;
  letter-spacing: 0;
  line-height: 52rpx;
}
.cleft .title {
  color: #fffeed;
  margin-top: 20rpx;
}
.center {
  align-items: center;
  display: -webkit-flex;
  display: flex;
  font-size: 28rpx;
  justify-content: flex-start;
}
.cright {
  background: #fff;
  border-radius: 0 12rpx 12rpx 0;
  flex-grow: 1;
  height: 172rpx;
  padding: 20rpx 19rpx 20rpx 17rpx;
  position: relative;
  width: calc(100% - 172rpx);
}
.cclum,
.cright {
  display: -webkit-flex;
  display: flex;
  justify-content: space-between;
}
.cclum {
  flex-direction: column;
  width: 100%;
}
.fc {
  align-items: center;
  display: -webkit-flex;
  display: flex;
  justify-content: center;
}
.couponStatus {
  background: linear-gradient(231.44deg, #bce8e7, #63dae0);
  border-radius: 382rpx;
  color: #fffeed;
  height: 56rpx;
  opacity: 1;
  width: 132rpx;
}
.blig {
  color: #4d4945;
  font-size: 28rpx;
  font-weight: 700;
}
.toolp {
  color: red;
}
.huise,
.toolp {
  font-size: 24rpx;
}
.huise {
  color: #ccc;
  font-weight: 400;
  letter-spacing: 0;
  line-height: 36rpx;
}
.mask {
  background: rgba(0, 0, 0, 0.3);
  height: 100vh;
  left: 0;
  position: fixed;
  top: 0;
  width: 100vw;
  z-index: 9999;
}
.modal-container {
  background-color: #fff;
  border-radius: 10rpx;
  height: 560rpx;
  left: 50%;
  padding: 20rpx;
  position: fixed;
  text-align: center;
  top: 50%;
  transform: translate(-50%, -50%);
  width: 532rpx;
  z-index: 10000;
}
.modal-header {
  border-bottom: 2rpx solid #f0f0f0;
  color: #3e414d;
  font-size: 32rpx;
  margin-bottom: 30rpx;
  padding-bottom: 10rpx;
  text-align: left;
}
.modal-content {
  font-size: 28rpx;
  margin-bottom: 20rpx;
  text-align: left;
}
.modal-content .heis {
  color: #3e414d;
  font-weight: 400;
  height: 40rpx;
  letter-spacing: 0rpx;
  line-height: 39.2rpx;
  margin-bottom: 32rpx;
}
.modal-content .hs {
  color: #8a8d99;
}
.modal-footer {
  display: -webkit-flex;
  display: flex;
  justify-content: space-between;
}
.modal-footer button:after {
  border: initial;
}
.cancel-button,
.start-button {
  background: none;
  border-radius: 8rpx;
  font-size: 34rpx;
  font-weight: 500;
  padding: 10rpx 20rpx;
  width: 50%;
}
.cancel-button {
  color: #b3b3b3;
}
.start-button {
  color: #06b9c0;
}
