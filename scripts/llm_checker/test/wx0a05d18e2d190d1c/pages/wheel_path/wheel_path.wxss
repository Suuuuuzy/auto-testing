.bottom_view {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  flex-direction: row;
  width: 100vw;
  height: 50px;
  justify-content: space-around;
  -webkit-box-align: center;
  align-items: center;
  align-content: center;
}
.play_btn_view {
  width: 60rpx;
  height: 60rpx;
}
.slider_content_view {
  width: 600rpx;
  height: 50px;
}
.slider_progress_view {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  flex-direction: row;
  -webkit-box-pack: justify;
  justify-content: space-between;
  -webkit-box-align: center;
  align-items: center;
  height: 50px;
}
.progress {
  margin: 5px 0;
}
.refresh_btn_style {
  color: #fff;
  background-color: #1e9eff;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  flex-direction: row;
  -webkit-box-align: center;
  align-items: center;
  -webkit-box-pack: center;
  justify-content: center;
}
.text_style {
  text-align: center;
}
.location_layout_style {
  margin-left: 30rpx;
  margin-top: 20rpx;
  width: 690rpx;
  height: 200rpx;
  background-color: #010101;
  opacity: 0.6;
  border-radius: 8rpx;
}
.plate_number_style {
  margin-top: 20rpx;
  width: 100%;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 36rpx;
}
.location_address_style,
.plate_number_style {
  margin-left: 30rpx;
  text-align: left;
  color: #fff;
}
.location_address_style {
  display: block;
  white-space: pre-wrap;
  width: 70%;
  line-height: 35rpx;
  font-size: 26rpx;
}
.location_btn_layout_sytle {
  margin-top: 500rpx;
  margin-left: 650rpx;
  width: 80rpx;
}
.location_btn_image_style {
  width: 80rpx;
  height: 80rpx;
}
